{
    "name": "@lumigo/serverless-lumigo",
    "version": "1.0.0",
    "description": "Serverless framework plugin to auto-install the Lumigo tracer",
    "main": "index.js",
    "scripts": {
        "test": "jest --config=jest.config.js",
        "test:lint": "eslint .",
        "semantic-release": "semantic-release",
        "prettier:ci": "prettier --list-different \"src/**/*.js\"",
        "prettier:fix": "prettier --write \"./src/**/*.js\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lumigo-io/serverless-lumigo.git"
    },
    "author": "Lumigo LTD (https://lumigo.io)",
    "license": "Apache 2",
    "bugs": {
        "url": "https://github.com/lumigo-io/serverless-lumigo/issues"
    },
    "homepage": "https://github.com/lumigo-io/serverless-lumigo#readme",
    "dependencies": {
        "bluebird": "^3.5.5",
        "fs-extra": "^8.1.0",
        "lodash": "^4.17.14"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.1.0",
        "@commitlint/config-conventional": "^8.0.0",
        "coveralls": "^3.0.2",
        "eslint": "^5.13.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-config-standard": "^12.0.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-node": "^9.1.0",
        "eslint-plugin-promise": "^4.0.1",
        "eslint-plugin-standard": "^4.0.0",
        "husky": "^3.0.0",
        "jest": "^24.8.0",
        "lint-staged": "^9.1.0",
        "prettier": "^1.18.2",
        "semantic-release": "^15.13.18",
        "serverless": "^1.46.1"
    },
    "prettier": {
        "useTabs": true,
        "tabWidth": 4,
        "printWidth": 90
    },
    "greenkeeper": {
        "ignore": [
            "eslint"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint"
        ]
    }
}
